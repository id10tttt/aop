<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_account_tax_invoice_wizard" model="ir.ui.view">
        <field name="name">创建税务发票</field>
        <field name="model">account.tax.invoice.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="tax_invoice_no" string="批次号"/>
                    </group>
                    <notebook>
                        <page string="结算清单明细行">
                            <field name="invoice_line_ids" string="结算清单明细行">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="account_id"/>
                                    <field name="account_analytic_id"/>
                                    <field name="analytic_tag_ids"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                    <field name="price_subtotal"/>
                                    <field name="tax_invoice_amount" string="开票金额"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
                        <group>
                            <field name="tax_invoice_method" string="生成方法"/>
                        </group>
                        <group>
                            <field name="tax_invoice_number" string="比率/金额"
                                   attrs="{'invisible':
                                   ['|', ('tax_invoice_method', '=', 'all'), ('tax_invoice_method', '=', False)]}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="create_account_tax_invoice" string="创建税务发票" type="object" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>