<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_sale_advance_payment_inv_inherit_aop_sale" model="ir.ui.view">
        <field name="name">创建结算清单</field>
        <field name="model">sale.advance.payment.inv</field>
        <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
        <field name="arch" type="xml">

            <xpath expr="//p[@class='oe_grey']" position="replace">
                <p class="oe_grey">
                    草稿结算清单将被创建，以便于在验证前检查
                </p>
            </xpath>

            <xpath expr="//field[@name='advance_payment_method']" position="before">
                <field name="reconciliation_batch_no" string="对账批次号"/>
            </xpath>

            <xpath expr="//button[@name='create_invoices'][1]" position="attributes">
                <attribute name="string">创建并查看结算清单</attribute>

            </xpath>

            <xpath expr="//button[@name='create_invoices'][2]" position="attributes">
                <attribute name="string">创建结算清单</attribute>
            </xpath>

            <field name="advance_payment_method" position="attributes">
                <attribute name="string">创建结算清单</attribute>
            </field>

        </field>
    </record>

    <record id="action_view_sale_advance_payment_inv" model="ir.actions.act_window">
        <field name="name">创建结算清单</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.advance.payment.inv</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="groups_id" eval="[(4,ref('sales_team.group_sale_salesman'))]"/>
        <!-- TODO: check if we need this -->
        <field name="binding_model_id" ref="sale.model_sale_order"/>
    </record>

</odoo>