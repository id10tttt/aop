<odoo>

    <record id="import_sale_order_wizard" model="ir.ui.view">
        <field name="name">import.sale.order.wizard</field>
        <field name="model">import.sale.order.wizard</field>
        <field name="arch" type="xml">
            <form string="导入文件">
                <field name="state" invisible="1"/>
                <group states="choose">
                    <group>
                        <field name="order_source" widget="radio"/>
                    </group>
                    <group>
                        <field name="import_file" />
                    </group>
                </group>
                <group states="get">
                    <p>
                        导入成功!
                    </p>
                </group>
                <footer states="choose">
                    <button name="action_import" string="导入" type="object" class="oe_highlight"/>

                    <button string="取消" class="oe_link" special="cancel"/>
                </footer>
                <footer states="get">
                    <button string="关闭" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
