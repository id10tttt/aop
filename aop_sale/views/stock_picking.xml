<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <data>

        <record model="ir.ui.view" id="view_picking_form_inherit">
            <field name="name">stock.picking</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@name='action_toggle_is_locked']" position="after">
                    <button name="generate_purchase_order"
                            string="采购单"
                            type="object"
                            attrs="{'invisible': [('picking_purchase_id', '!=', False)]}"
                            class="oe_highlight"/>
                </xpath>

                <xpath expr="//field[@name='origin']" position="after">
                    <field name="src_partner_id" string="源地址"/>
                    <field name="des_partner_id" string="目的地址"/>
                    <field name="picking_purchase_id"
                           string="采购订单"
                           attrs="{'invisible': [('picking_purchase_id', '=', False)]}"/>
                </xpath>
            </field>
        </record>

    </data>

</odoo>