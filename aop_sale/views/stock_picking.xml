<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_picking_form_inherit_aop_purchase" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.aop.purchase</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/header/button[last()]" position="after">

                <!--<button name="create_purchase_order"-->
                        <!--string="Create Purchase Order"-->
                        <!--type="object"-->
                        <!--class="oe_highlight"-->
                        <!--attrs="{'invisible': [('picking_purchase_id', '!=', False)]}"-->
                        <!--/>-->

            </xpath>

            <xpath expr="//field[@name='picking_type_id']" position="after">
                <field name="move_id_without_package" />

            </xpath>



            <xpath expr="//field[@name='origin']" position="after">
                <!--
                <field name="src_partner_id" string="源地址"/>
                <field name="des_partner_id" string="目的地址"/>
                -->
                <field name="picking_purchase_id"
                       string="供方任务订单"
                       attrs="{'invisible': [('picking_purchase_id', '=', False)]}"/>
            </xpath>

            <xpath expr="//button[@name='action_see_packages']" position="attributes">
                    <attribute name="string">车厢</attribute>
            </xpath>

             <xpath expr="//page[2]/button[@name='put_in_pack']" position="attributes">
                    <attribute name="string">放入车厢</attribute>
            </xpath>



        </field>
    </record>
</odoo>