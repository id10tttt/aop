<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <data>

        <record model="ir.ui.view" id="view_delivery_carrier_form_inherit">
            <field name="name">delivery.carrier_from</field>
            <field name="model">delivery.carrier</field>
            <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='integration_level']" position="after">
                    <field name="partner_id" string="合作伙伴"/>
                    <field name="serial_number" />
                    <field name="version_id" />
                    <field name="serial_no" />
                    <field name="is_formal" />

                    <field name="project_id" />

                </xpath>

                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="effective_date" />
                    <field name="expiry_date" />
                    <field name="source" />
                    <field name="type" widget="radio" />
                </xpath>

                <xpath expr="//page[1]" position="before">
                    <page name="route_id" string="合同条款">
                        <field name="aop_route_id" string="路由">
                            <tree>
                                <field name="product_id"/>
                                <field name="name" string="路由说明"/>
                                <field name="partner_id" string="合作伙伴"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

    </data>

</odoo>