<?xml version="1.0"?>
<odoo>
    <data>

        <!-- 收入/成本台账search   -->
        <record id="account_invoice_groupby_inherit_aop_sale" model="ir.ui.view">
            <field name="name">account.invoice.groupby.aop_sale</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='number']" position="before">
                    <field name="account_batch_no"/>
                </xpath>

                <xpath expr="//group/filter[@name='group_by_partner_id']" position="before">
                    <filter string="对账批次" name="account_batch_no" domain="[]" context="{'group_by':'account_batch_no'}"/>
                </xpath>

            </field>
        </record>

        <!-- 收入台账form   -->
        <record id="view_account_invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">

                <xpath expr="//header//button[@name='preview_invoice']" position="after">
                    <button name="create_account_tax_invoice"
                            string="税务发票"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-list"/>
                </xpath>

                <xpath expr="//field[@name='team_id']" position="after">
                    <field name="account_tax_invoice_id" string="税务发票"
                           attrs="{'invisible': [('account_tax_invoice_id', '=', False)]}"/>
                </xpath>

                 <xpath expr="//field[@name='cash_rounding_id']" position="after">
                       <field name="account_batch_no"/>
                   </xpath>

            </field>
        </record>

        <!-- 收入台账tree   -->
        <record id="invoice_tree_with_onboarding_inherit_aop_sale" model="ir.ui.view">
            <field name="name">account.invoice.tree.with.onboarding.inherit.aop_sale</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_tree_with_onboarding"/>
            <field name="mode">extension</field>
            <field name="arch" type="xml">
                <field name="partner_id" position="before">
                    <field name="account_batch_no"/>
                </field>
            </field>
        </record>

        <!-- 成本台账tree   -->
        <record id="invoice_supplier_tree_inherit_aop_sale" model="ir.ui.view">
            <field name="name">invoice.supplier.tree.inherit.aop_sale</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_tree"/>
            <field name="mode">extension</field>
            <field name="arch" type="xml">
                <field name="vendor_display_name" position="before">
                    <field name="account_batch_no"/>
                </field>
            </field>
        </record>

        <!-- 成本台账form   -->
        <record id="account_invoice_supplier_form__inherit_aop_sale" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form..inherit.aop_sale</field>
            <field name="model">account.invoice</field>

            <field name="inherit_id" ref="purchase.view_invoice_supplier_purchase_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="//field[@name='vendor_bill_purchase_id']" position="after">
                        <field name="account_batch_no"/>
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</odoo>